---
layout: layouts/base.njk
section: post
---

<article class="mx-auto max-w-2xl prose-lg">
  <img src="/static/img/blog/{{ image }}" alt="{{ imageAlt }}" />
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p class="not-prose py-10">
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag" class="inline-block py-1 px-2 rounded bg-indigo-50 text-indigo-500 text-xs font-medium tracking-widest mr-2">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav class="py-4">
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
